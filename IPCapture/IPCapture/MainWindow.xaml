    <Grid HorizontalAlignment="Left" RenderTransformOrigin="-0.044,0.895" Margin="0" VerticalAlignment="Center" Height="Auto" Width="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="IPv4_key" Content="IPv4:" VerticalAlignment="Center" RenderTransformOrigin="0.613,2.492" Foreground="White" Margin="10,0,49,0" HorizontalAlignment="Left"/>
        <Label x:Name="IPv4_val" Content="-" Grid.Column="1" HorizontalAlignment="Left" Margin="9,4,0,7" VerticalAlignment="Center" Foreground="White"/>
        <Label x:Name="ExternalIP_val" Content="-" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Foreground="{x:Null}" Margin="9,7,0,0" Opacity="0.805" Background="{x:Null}"/>
        <Label x:Name="MAC_key" Content="MAC:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.613,2.492" Grid.Row="4" Foreground="White"/>
        <Label x:Name="MAC_val" Content="-" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Grid.Row="4" Foreground="White"/>
        <Label x:Name="IPv6_key" Content="IPv6:" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.613,2.492" Foreground="White" Grid.Row="1" Height="26"/>
        <Label x:Name="IPv6_val" Content="-" Grid.Column="1" HorizontalAlignment="Left" Margin="9,10,0,0" VerticalAlignment="Center" Foreground="White" Grid.Row="1"/>
        <Label x:Name="DefaultGateway_key" Content="Default Gateway:" RenderTransformOrigin="0.613,2.492" Grid.Row="3" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,5,0,1"/>
        <Label x:Name="ExternalIP_key" Content="External IP:" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.613,2.492" Foreground="White" Grid.Row="2" VerticalContentAlignment="Bottom"/>
        <Label x:Name="DefaultGateway_val" Content="-" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Foreground="White" Margin="9,5,0,1"/>
    </Grid>
</Window>
